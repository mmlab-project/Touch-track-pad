<Window x:Class="GlideDeckReceiver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="GlideDeck Receiver"
        Width="500" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanResize"
        Icon="icon.ico"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">
    
    <Viewbox Stretch="Uniform">
        <Grid Margin="10" Width="500" Height="700">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タスクトレイアイコン -->
        <tb:TaskbarIcon x:Name="TrayIcon"
                        IconSource="pack://application:,,,/icon.ico"
                        ToolTipText="GlideDeck Receiver"
                        TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="表示" Click="MenuItem_Show_Click"/>
                    <Separator/>
                    <MenuItem Header="終了" Click="MenuItem_Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

        <!-- 共通タイトル -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="📱 GlideDeck Receiver"
                       FontSize="24" FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- メインコンテンツ -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="0,0,0,10">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Margin="0,0,10,0" Padding="10,5">
                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      ContentSource="Header"
                                                      RecognizesAccessKey="True"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- タブ: 接続 -->
            <TabItem Header="接続">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- IP選択 -->
                    <StackPanel Grid.Row="0" Margin="0,15,0,20">
                        <TextBlock Text="ネットワークアダプタ"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,8"/>
                        <ComboBox x:Name="IpComboBox"
                                  Style="{StaticResource ModernComboBox}"
                                  SelectionChanged="IpComboBox_SelectionChanged"/>
                    </StackPanel>

                    <!-- QRコード -->
                    <Border Grid.Row="1"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="16"
                            Padding="20"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <Border Background="White"
                                    CornerRadius="8"
                                    Padding="10"
                                    HorizontalAlignment="Center">
                                <Image x:Name="QrCodeImage"
                                       Width="180" Height="180"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            </Border>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <TextBlock Text="IP: " FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="IpText" FontSize="12" Foreground="{StaticResource AccentBrush}"/>
                                <TextBlock Text=" | Port: " FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="PortText" FontSize="12" Foreground="{StaticResource AccentBrush}"/>
                            </StackPanel>
                            
                            <Button x:Name="RefreshButton"
                                    Content="🔄 QR更新"
                                    Style="{StaticResource ModernButton}"
                                    Click="RefreshButton_Click"
                                    HorizontalAlignment="Center"
                                    Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- ステータス -->
                    <Border Grid.Row="2"
                            Background="{StaticResource SurfaceBrush}"
                            CornerRadius="12"
                            Padding="15"
                            VerticalAlignment="Top">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="StatusIndicator"
                                         Width="10" Height="10"
                                         Fill="#4CAF50"
                                         Margin="0,0,10,0"/>
                                <TextBlock x:Name="StatusText"
                                           Text="サーバー起動中..."
                                           FontSize="14"
                                           Foreground="{StaticResource TextBrush}"/>
                            </StackPanel>
                            <TextBlock x:Name="ClientCountText"
                                       Text="接続クライアント: 0"
                                       FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="20,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- タブ: マクロ -->
            <TabItem Header="マクロ">
                <Grid Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox x:Name="MacroList" Grid.Row="0"
                             Background="{StaticResource SurfaceBrush}"
                             BorderThickness="0"
                             Margin="0,0,0,15">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Name}" 
                                               Foreground="{StaticResource TextBrush}" 
                                               VerticalAlignment="Center"
                                               FontSize="14"/>
                                    <!-- Detailed keys tooltip or text? -->
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#333333"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#252525"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="新規作成" Click="AddMacro_Click" Style="{StaticResource ModernButton}" Margin="0,0,10,0"/>
                        <Button Content="編集" Click="EditMacro_Click" Style="{StaticResource ModernButton}" Background="#757575" Margin="0,0,10,0"/>
                        <Button Content="削除" Click="DeleteMacro_Click" Style="{StaticResource ModernButton}" Background="#F44336"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- 共通ボタン -->
         <Button Grid.Row="2" x:Name="MinimizeButton"
                Content="📉 画面を隠す"
                Style="{StaticResource ModernButton}"
                Click="MinimizeButton_Click"
                HorizontalAlignment="Center"/>
        </Grid>
    </Viewbox>
</Window>

