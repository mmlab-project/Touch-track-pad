<Window x:Class="GlideDeckReceiver.MacroEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="マクロ編集" Height="400" Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#1E1E1E">
    <Window.Resources>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B0B0B0"/>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Viewbox Stretch="Uniform">
        <StackPanel Margin="10" Width="360">
        <TextBlock Text="マクロ名" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" Margin="0,0,0,8"/>
        <TextBox x:Name="NameBox" Text="New Macro" Height="40"/>
        
        <TextBlock Text="キー割り当て (最大5キー)" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" Margin="0,25,0,8"/>
        <Border Background="#252525" CornerRadius="8" Padding="20" MinHeight="100" Margin="0,0,0,30">
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="KeysText" Text="[未設定]" Foreground="#4CAF50" FontWeight="Bold" FontSize="24" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                <TextBlock x:Name="InstructionText" Text="録画ボタンを押してキーを入力" FontSize="14" Foreground="#808080" HorizontalAlignment="Center" Margin="0,15,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,40">
            <Button x:Name="RecordButton" Content="🔴 入力開始" Click="RecordButton_Click" Width="160" Height="50" Background="#F44336" FontWeight="Bold" Margin="0,0,20,0"/>
            <Button x:Name="ResetButton" Content="クリア" Click="ResetButton_Click" Width="100" Height="50" Background="#757575"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="キャンセル" Click="CancelButton_Click" Background="Transparent" Margin="0,0,15,0" Foreground="{StaticResource TextSecondaryBrush}"/>
            <Button Content="登録完了" Click="SaveButton_Click" Width="120" Height="45" FontWeight="Bold"/>
        </StackPanel>
        </StackPanel>
    </Viewbox>
</Window>

