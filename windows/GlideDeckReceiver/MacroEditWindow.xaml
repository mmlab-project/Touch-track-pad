<Window x:Class="GlideDeckReceiver.MacroEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource MacroEditTitle}" Height="400" Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource WindowGlassBrush}">
    <Window.Resources>
        <!-- TextBox Style for this window -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="#F2F2F7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Viewbox Stretch="Uniform">
        <StackPanel Margin="20" Width="320">
            <TextBlock Text="{DynamicResource MacroNameLabel}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14" Margin="0,0,0,8"/>
            <TextBox x:Name="NameBox" Text="New Macro" Height="44"/>
            
            <TextBlock Text="{DynamicResource MacroKeysLabel}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14" Margin="0,25,0,8"/>
            <Border Background="{DynamicResource SurfaceGlassBrush}" CornerRadius="12" Padding="20" MinHeight="100" Margin="0,0,0,30">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="KeysText" Text="{DynamicResource MacroNotSet}" Foreground="#34C759" FontWeight="Bold" FontSize="24" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="InstructionText" Text="{DynamicResource MacroInstruction}" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,40">
                <Button x:Name="RecordButton" Content="{DynamicResource MacroRecord}" Click="RecordButton_Click" 
                        Style="{StaticResource LiquidButton}" Background="#FF3B30" Width="140" Height="50" Margin="0,0,15,0"/>
                <Button x:Name="ResetButton" Content="{DynamicResource MacroClear}" Click="ResetButton_Click" 
                        Style="{StaticResource LiquidButton}" Background="#636366" Width="90" Height="50"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{DynamicResource MacroCancel}" Click="CancelButton_Click" 
                        Style="{StaticResource LiquidButton}" Background="Transparent" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,15,0"/>
                <Button Content="{DynamicResource MacroSave}" Click="SaveButton_Click" 
                        Style="{StaticResource LiquidButton}" Width="120" Height="45"/>
            </StackPanel>
        </StackPanel>
    </Viewbox>
</Window>
